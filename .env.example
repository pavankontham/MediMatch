# MediMatch - Environment Variables Template
# Copy this file to .env and fill in your actual API keys
# NEVER commit the .env file to Git!

# Groq API (for AI Chatbot responses)
# Get your key from: https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here

# Serper API (for web search / RAG)
# Get your key from: https://serper.dev/
SERPER_API_KEY=your_serper_api_key_here

# Google Gemini API (for OCR and vision tasks)
# Get your key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Optional: Flask Configuration
FLASK_ENV=development
DEBUG=True

# Optional: KG Visualization (set to true to use /tmp for KG files)
USE_TMP_FOR_KG=false

# Optional: LoRA Model Path
DRUGBOT_LORA_ADAPTER=drugbot-distilgpt2-lora-checkpoints/epoch1_model

# Optional: FAISS Index Paths
KG_FAISS_INDEX=kg_faiss_index.faiss
KG_FAISS_META=kg_faiss_metadata.pkl
